---
import type { CollectionEntry } from "astro:content";
import type { MarkdownHeading } from "astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import TableOfContents from "../components/TableOfContents.astro";
import { Image } from "astro:assets";

type Props = CollectionEntry<"blog">["data"] & {
	headings?: MarkdownHeading[];
};

const {
	title,
	description,
	pubDate,
	updatedDate,
	heroImage,
	headings = [],
} = Astro.props;
---

<html lang="en" data-theme="nord-dark">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="bg-base-100 text-base-content">
		<Header />
		<TableOfContents headings={headings} />
		<main class="container mx-auto max-w-4xl px-4 py-8">
			<article class="card bg-base-100 shadow-lg">
				<!-- Hero Image Section -->
				{
					heroImage && (
						<figure class="card-image">
							<Image
								width={1020}
								height={510}
								src={heroImage}
								alt=""
								class="w-full h-64 md:h-80 object-cover rounded-t-box"
							/>
						</figure>
					)
				}

				<!-- Content Section -->
				<div class="card-body">
					<!-- Title and Meta Section -->
					<div class="text-center mb-8">
						<!-- Date Badge -->
						{
							pubDate !== undefined && (
								<div class="flex flex-col sm:flex-row items-center justify-center gap-2 mb-4">
									<div class="badge badge-primary badge-lg">
										<FormattedDate date={pubDate} />
									</div>
									{updatedDate && (
										<div class="badge badge-outline badge-sm">
											Last updated:{" "}
											<FormattedDate date={updatedDate} />
										</div>
									)}
								</div>
							)
						}

						<!-- Title -->
						<h1
							class="card-title text-3xl md:text-4xl lg:text-5xl text-primary mb-4 justify-center"
						>
							{title}
						</h1>

						<!-- Divider -->
						<div class="divider divider-primary"></div>
					</div>

					<!-- Blog Content -->
					<div class="prose prose-lg max-w-none">
						<slot />
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
