---
import Layout from "./Layout.astro";
import "@/styles/starwind.css";
---

<Layout>
    <article class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 max-w-4xl">
        <slot />
    </article>
</Layout>

<style is:global>
    /* Blog post styling */
    .prose {
        --tw-prose-body: #a0a0a0;
        --tw-prose-headings: #b0b0b0;
        --tw-prose-links: #b0b0b0;
        --tw-prose-bold: #b0b0b0;
        --tw-prose-counters: #a0a0a0;
        --tw-prose-bullets: #a0a0a0;
        --tw-prose-hr: #1a1a1a;
        --tw-prose-quotes: #b0b0b0;
        --tw-prose-quote-borders: #1a1a1a;
        --tw-prose-captions: #a0a0a0;
        --tw-prose-code: #b0b0b0;
        --tw-prose-pre-code: #b0b0b0;
        --tw-prose-pre-bg: #000000;
        --tw-prose-th-borders: #1a1a1a;
        --tw-prose-td-borders: #1a1a1a;
    }

    .prose ul {
        list-style-type: disc;
        padding-left: 1.25em;
        margin-top: 1.25em;
        margin-bottom: 1.25em;
    }

    .prose ol {
        list-style-type: decimal;
        padding-left: 1.25em;
        margin-top: 1.25em;
        margin-bottom: 1.25em;
    }

    .prose li {
        margin-top: 0.5em;
        margin-bottom: 0.5em;
    }

    .prose p {
        margin-top: 1.25em;
        margin-bottom: 1.25em;
    }

    .prose h1,
    .prose h2,
    .prose h3,
    .prose h4 {
        margin-top: 2em;
        margin-bottom: 1em;
        font-weight: 700;
    }

    .prose a {
        text-decoration: underline;
        text-underline-offset: 2px;
    }

    .prose a:hover {
        color: #c0c0c0;
    }

    .prose img {
        border-radius: 0.5rem;
        border: 1px solid #1a1a1a;
        margin-top: 2em;
        margin-bottom: 2em;
    }

    .prose pre {
        background-color: #000000;
        border: 1px solid #1a1a1a;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-top: 1.5em;
        margin-bottom: 1.5em;
    }

    .prose code {
        background-color: #000000;
        border: 1px solid #1a1a1a;
        border-radius: 0.25rem;
        padding: 0.125rem 0.25rem;
    }
</style>
