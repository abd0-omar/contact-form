---
import "@/styles/starwind.css";
import { Button } from "@/components/starwind/button";
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="color-scheme" content="dark" />
		<title>Newzletter</title>
	</head>
	<body class="min-h-screen flex flex-col bg-[#000000]">
		<header
			class="sticky top-0 z-50 w-full border-b border-[#1a1a1a] bg-[#000000]"
		>
			<div class="container mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex h-16 items-center justify-between">
					<div class="flex items-center">
						<a href="/" class="text-xl font-bold text-[#b0b0b0]"
							>Newzletter</a
						>
					</div>
					<nav class="flex items-center space-x-4">
						<a href="/" class="text-[#a0a0a0] hover:text-[#b0b0b0]"
							>Home</a
						>
						<a
							href="/news"
							class="text-[#a0a0a0] hover:text-[#b0b0b0]">News</a
						>
						<a
							href="/about"
							class="text-[#a0a0a0] hover:text-[#b0b0b0]">About</a
						>
						<a
							href="/login"
							class="text-[#a0a0a0] hover:text-[#b0b0b0]">Login</a
						>
						<a href="/subscriptions">
							<Button
								class="bg-[#000000] text-[#b0b0b0] border border-[#1a1a1a] hover:bg-[#c0c0c0] hover:text-[#000000] transition-colors"
								>Subscribe</Button
							>
						</a>
					</nav>
				</div>
			</div>
		</header>

		<main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-8">
			<slot />
		</main>

		<footer class="bg-[#000000] border-t border-[#1a1a1a]">
			<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-lg font-semibold text-[#b0b0b0] mb-4">
							Newzletter
						</h3>
						<p class="text-[#a0a0a0]">
							Stay informed with the latest news and updates.
						</p>
					</div>
					<div>
						<h3 class="text-lg font-semibold text-[#b0b0b0] mb-4">
							Quick Links
						</h3>
						<ul class="space-y-2">
							<li>
								<a
									href="/"
									class="text-[#a0a0a0] hover:text-[#b0b0b0]"
									>Home</a
								>
							</li>
							<li>
								<a
									href="/news"
									class="text-[#a0a0a0] hover:text-[#b0b0b0]"
									>News</a
								>
							</li>
							<li>
								<a
									href="/about"
									class="text-[#a0a0a0] hover:text-[#b0b0b0]"
									>About</a
								>
							</li>
							<li>
								<a
									href="/login"
									class="text-[#a0a0a0] hover:text-[#b0b0b0]"
									>Login</a
								>
							</li>
						</ul>
					</div>
					<div>
						<h3 class="text-lg font-semibold text-[#b0b0b0] mb-4">
							Contact
						</h3>
						<p class="text-[#a0a0a0]">
							Email: contact@newzletter.com
						</p>
					</div>
				</div>
				<div
					class="mt-8 pt-8 border-t border-[#1a1a1a] text-center text-[#a0a0a0]"
				>
					<p>
						&copy; {new Date().getFullYear()} Newzletter. All rights
						reserved.
					</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	/* Smooth scrolling */
	html {
		scroll-behavior: smooth;
	}

	/* Better focus styles */
	:focus-visible {
		outline: 2px solid #b0b0b0;
		outline-offset: 2px;
	}

	/* Ensure dark mode is applied to all elements */
	:root {
		color-scheme: dark;
		background-color: #000000;
	}
</style>
