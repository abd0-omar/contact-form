---
import Layout from "../layouts/Layout.astro";
import "@/styles/starwind.css";
import { Button } from "@/components/starwind/button";
import {
    Card,
    CardContent,
    CardHeader,
    CardTitle,
} from "@/components/starwind/card";
import { Input } from "@/components/starwind/input";
import { Label } from "@/components/starwind/label";
---

<Layout>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <Card class="bg-[#0a0a0a] border-[#1a1a1a] max-w-md mx-auto">
            <CardHeader>
                <CardTitle class="text-2xl font-bold text-[#b0b0b0]">
                    Change Password
                </CardTitle>
            </CardHeader>
            <CardContent>
                <div class="space-y-6">
                    %% for error in errors %%
                    <div
                        class="p-4 bg-[#1a1a1a] border border-[#2a2a2a] rounded-md"
                    >
                        <p class="text-[#ff6b6b]"><i>[[.error]]</i></p>
                    </div>
                    %% endfor %%

                    <form
                        action="/admin/password"
                        method="post"
                        class="space-y-4"
                    >
                        <div class="space-y-2">
                            <Label for="current_password" class="text-[#a0a0a0]"
                                >Current Password</Label
                            >
                            <Input
                                type="password"
                                id="current_password"
                                name="current_password"
                                placeholder="Enter current password"
                                required
                                class="bg-[#000000] border-[#1a1a1a] text-[#b0b0b0] placeholder-[#666666] focus:border-[#b0b0b0]"
                            />
                        </div>

                        <div class="space-y-2">
                            <Label for="new_password" class="text-[#a0a0a0]"
                                >New Password</Label
                            >
                            <Input
                                type="password"
                                id="new_password"
                                name="new_password"
                                placeholder="Enter new password"
                                required
                                class="bg-[#000000] border-[#1a1a1a] text-[#b0b0b0] placeholder-[#666666] focus:border-[#b0b0b0]"
                            />
                        </div>

                        <div class="space-y-2">
                            <Label
                                for="new_password_check"
                                class="text-[#a0a0a0]"
                                >Confirm New Password</Label
                            >
                            <Input
                                type="password"
                                id="new_password_check"
                                name="new_password_check"
                                placeholder="Type the new password again"
                                required
                                class="bg-[#000000] border-[#1a1a1a] text-[#b0b0b0] placeholder-[#666666] focus:border-[#b0b0b0]"
                            />
                        </div>

                        <div class="flex justify-between items-center pt-4">
                            <a href="/dashboard">
                                <Button
                                    type="button"
                                    class="bg-[#000000] text-[#b0b0b0] border border-[#1a1a1a] hover:bg-[#c0c0c0] hover:text-[#000000] transition-colors"
                                >
                                    Back to Dashboard
                                </Button>
                            </a>
                            <Button
                                type="submit"
                                class="bg-[#000000] text-[#b0b0b0] border border-[#1a1a1a] hover:bg-[#c0c0c0] hover:text-[#000000] transition-colors"
                            >
                                Change Password
                            </Button>
                        </div>
                    </form>
                </div>
            </CardContent>
        </Card>
    </div>
</Layout>
