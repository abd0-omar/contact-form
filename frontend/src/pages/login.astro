---
import Layout from "../layouts/Layout.astro";
import "@/styles/starwind.css";
import { Input } from "@/components/starwind/input";
import { Button } from "@/components/starwind/button";
import { Label } from "@/components/starwind/label";
import { Card } from "@/components/starwind/card";
---

<Layout>
    <div class="max-w-md mx-auto">
        <Card class="bg-[#0a0a0a] border-[#1a1a1a]">
            <div class="p-6">
                <h1 class="text-2xl font-bold text-[#b0b0b0] mb-6">
                    Login to Newzletter
                </h1>
                %% if error|wordcount > 0 %%
                <div
                    class="mb-4 p-3 bg-[#1a1a1a] border border-[#333333] rounded text-[#b0b0b0]"
                >
                    <p><i>[[.error]]</i></p>
                </div>
                %% endif %%
                <form action="/login" method="post" class="space-y-4">
                    <div class="space-y-2">
                        <Label for="username" class="text-[#a0a0a0]"
                            >Username</Label
                        >
                        <Input
                            id="username"
                            name="username"
                            type="text"
                            placeholder="Enter your username"
                            required
                            class="bg-[#000000] border-[#1a1a1a] text-[#b0b0b0] placeholder-[#666666] focus:border-[#b0b0b0]"
                        />
                    </div>
                    <div class="space-y-2">
                        <Label for="password" class="text-[#a0a0a0]"
                            >Password</Label
                        >
                        <Input
                            id="password"
                            name="password"
                            type="password"
                            placeholder="Enter your password"
                            required
                            class="bg-[#000000] border-[#1a1a1a] text-[#b0b0b0] placeholder-[#666666] focus:border-[#b0b0b0]"
                        />
                    </div>
                    <Button
                        type="submit"
                        class="w-full bg-[#000000] text-[#b0b0b0] border border-[#1a1a1a] hover:bg-[#c0c0c0] hover:text-[#000000] transition-colors"
                    >
                        Login
                    </Button>
                </form>
            </div>
        </Card>
    </div>
</Layout>
